extends ../components/layout.pug
block variables
  - var title = 'Отчёт по расчёту'
  - var date = '18.12.2024, 18:55:32'
  - var contourName = 'TIRC102'
  - var contourDescription = 'Объем выхода полезных фракций'
  - var comment = 'Расчёт настроек клапана подачи кислородной смеси в емкость АГ-42'

block content
  section.page
    include ../components/header-primary.pug
    h2.bold Идентификация объекта 2
    br
    include ../components/pictures/period_2.pug
    p.center.w-full Исследуемый период:
      span= ' ' + date + ' - ' + date
    br
    h2.bold Результат идентификации
    br
    table.outlined.slim
      thead
        tr
          th Объект
          th То
          th τ
          th.right Ко
      tbody
        tr
          td С самовыравниванием
          td.right 10.2
          td.right 10.2
          td.right 10.2
    br
    include ../components/pictures/approximation.pug
    p.center.w-full
      span(style="color: var(--accent-pv);") ●
      |  – Регулируемая переменная
      |  &nbsp;&nbsp;&nbsp;
      span(style="color: var(--accent-approx);") ●
      |  – График аппроксимации

  section.page
    div.w-full.only-print
      include ../components/header-secondary.pug

    div.flex-col.center(style="gap: var(--size-xl); margin-bottom: calc(var(--size-3xl) * 1.2)")
      h2.bold Настройки регулятора

      table.outlined.slim
        thead
          tr
            th Кп
            th Ти
            th Тд
            th Тфд
            th Тф
            th.right П/зона
        tbody
          tr
            td 10.2
            td 10.2
            td 10.2
            td 10.2
            td 10.2
            td.right 10.2

      h2.bold Моделирование

      table.outlined.slim
        thead
          tr
            th Параметр
            th Значение
        tbody
          tr
            td Тип возмущения
            td Нагрузка
          tr
            td Величина возмущения
            td 10
          tr
            td Шум
            td Сгенерированный (0.5)
          tr
            td Время моделирования
            td 102

    include ../components/pictures/process_pv.pug
    p.center.w-full
      span(style="color: var(--accent-pv); opacity: 0.5;") ●
      |  – Рассчитанные настройки
      |  &nbsp;&nbsp;&nbsp;
      span(style="color: var(--accent-pv);") ●
      |  – Экспертные настройки
      |  &nbsp;&nbsp;&nbsp;
      span(style="color: var(--accent-sp);") ●
      |  – SP
